<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppNoActionBarTheme.InputLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlNormal">@color/black_light1</item>
        <item name="textColorError">@android:color/holo_red_light</item>
    </style>

    <style name="AppActionBarTheme.InputLayout" parent="AppTheme">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorControlNormal">@color/black_light1</item>
        <item name="textColorError">@android:color/holo_red_light</item>
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textColorHint">@color/black_light1</item>
        <item name="android:textColorHighlight">@color/black_light1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="before_error_appearance" parent="@android:style/TextAppearance">
        <!--<item name="android:textColor">@color/black_light1</item>-->
        <item name="android:textColorHint">@color/black_light1</item>
        <item name="android:textSize">12sp</item>
        <!--<item name="android:colorActivatedHighlight">@color/black_light1</item>-->
        <!--<item name="android:colorControlActivated">@color/black_light1</item>-->
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_light1</item>
        <item name="colorControlNormal">@color/black_light1</item>
        <item name="colorControlActivated">@color/black_light1</item>
        <item name="colorControlHighlight">@color/black_light1</item>
        <item name="android:textColorHighlight">@color/black_light1</item>
    </style>

    <style name="Inactive" parent="AppNoActionBarTheme.InputLayout">
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DialogAnimation_Slide_Left_Right">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="TextInputLineColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>


</resources>

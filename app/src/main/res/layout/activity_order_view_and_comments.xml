<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.myorder.open.OpenFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/total_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp">


        <TextView
            android:gravity="end"
            android:id="@+id/total_anmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:text="Total Amount : 0.0"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />


    </android.support.v7.widget.CardView>


    <com.digitfellas.ac.customview.CustomMessageView
        android:id="@+id/custom_message_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/total_layout">

    </com.digitfellas.ac.customview.CustomMessageView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/colorPrimary"
        android:tint="@color/white"
        android:visibility="visible"
        app:backgroundTint="@color/colorPrimary"
        app:layout_behavior="com.digitfellas.ac.fabscrollbehave.ScrollAwareFABBehavior"
        app:srcCompat="@drawable/ic_add_black_24dp" />
</RelativeLayout>